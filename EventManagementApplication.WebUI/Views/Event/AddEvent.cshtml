@{
    ViewData["Title"] = "Add Event User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-8">
            <h1 class="text-center mb-4 text-darkblue">Add Event</h1>
            <form method="post" action="@Url.Action("AddEvent", "Event")">
                <div class="form-group">
                    <label for="event-title" class="text-darkblue">Event Title</label>
                    <input type="text" id="event-title" name="Title" class="form-control mt-3" required />
                </div>

             
                <div class="form-group mt-3">
                    <label for="event-description" class="text-darkblue">Event Description</label>
                    <textarea id="event-description" name="Description" class="form-control mt-3" rows="3"></textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="event-title" class="text-darkblue">Event Sub Content</label>
                    <input type="text" id="event-title" name="SubContent" class="form-control mt-3" required />
                </div>
                <div class="row mt-3">
                    <div class="form-group col-lg-6">
                        <label for="event-date" class="text-darkblue">Event Date</label>
                        <input type="date" id="event-date" name="Date" class="form-control mt-3" required />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="event-type" class="text-darkblue">Event Type</label>
                        @Html.DropDownList("Type", ViewBag.TypeList as SelectList, "Choose Type", new { @class = "form-control mt-3", @required = "required" })
                    </div>
                </div>

                <div class="row mt-3">

                    <div class="form-group col-lg-6">
                        <label for="event-start-time" class="text-darkblue">Event Start Time</label>
                        <input type="time" id="event-start-time" name="StartTime" class="form-control mt-3" required />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="event-end-time" class="text-darkblue">Event End Time</label>
                        <input type="time" id="event-end-time" name="EndTime" class="form-control mt-3" required />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="form-group col-lg-6">
                        <label for="event-status" class="text-darkblue">Event Status</label>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="Status" id="status-active" value="true" required>
                            <label class="form-check-label text-darkblue" for="status-active">
                                Active
                            </label>
                        </div>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="Status" id="status-inactive" value="false" required>
                            <label class="form-check-label text-darkblue" for="status-inactive">
                                Inactive
                            </label>
                        </div>
                    </div>

                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-primary mt-5">Add Event</button>
                </div>
            </form>
            <div id="eventCreatedMessage" style="display: none;">
                Event is created!
            </div>

        </div>
    </div>
</div>

