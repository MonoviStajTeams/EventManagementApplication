@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forgot Password</h2>

<div class="card mx-auto" style="width: 400px;">
    <div class="card-body">
        <h2 class="text-center mb-5">Please enter your email address, then we send password reset email</h2>

        @* Alert messages are commented out because they have no content to display. *@

        @* Add the CSRF token. *@
        @Html.AntiForgeryToken()

        <form method="post" asp-action="ResetPassword">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="Email" required>
                <span class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Reset Password</button>
                <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
            </div>
        </form>
    </div>
</div>
