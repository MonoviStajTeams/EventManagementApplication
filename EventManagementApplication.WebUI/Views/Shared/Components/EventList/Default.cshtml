<script>
    function showShareOptions(eventTitle) {
        const optionsContainer = document.getElementById(`shareOptions_${eventTitle}`);
        const isOptionsVisible = optionsContainer.style.display === 'block';

        // Tüm paylaşım seçeneklerini gizle
        const shareOptions = document.querySelectorAll('.share-options');
        shareOptions.forEach(options => options.style.display = 'none');

        // Seçili etkinlik için paylaşım seçeneklerini göster veya gizle
        if (!isOptionsVisible) {
            optionsContainer.style.display = 'block';
        }
    }
    function showShareOptions(eventTitle) {
        // Tüm paylaşım seçeneklerini gizle
        const shareOptions = document.querySelectorAll('.share-options');
        shareOptions.forEach(options => options.style.display = 'none');

        // Seçili etkinlik için paylaşım seçeneklerini göster
        const optionsContainer = document.getElementById(`shareOptions_${eventTitle}`);
        optionsContainer.style.display = 'block';
    }

    function shareOnWhatsApp(eventTitle) {
        const encodedTitle = encodeURIComponent(eventTitle);
        const whatsappUrl = `https://api.whatsapp.com/send?text=${encodedTitle}`;
        window.open(whatsappUrl, '_blank');
    }

    function shareOnGmail(eventTitle) {
        const subject = `Etkinlik Paylaşımı: ${eventTitle}`;
        const body = `Merhaba,\n\nEtkinlikle ilgili detaylar: ${eventTitle}\n\nGörüntülemek için tıklayınız: ETKİNLİK_LİNKİ`;
        const mailToUrl = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        window.open(mailToUrl, '_blank');
    }
</script>

<script>
    $(document).ready(function () {
        // Sayfalamayı başlatan fonksiyon
        function loadExpertise(page) {
            $.ajax({
                url: '/Event/Pagination', // Kontrolör adını ve aksiyon adını uygun şekilde değiştirin
                type: 'GET',
                data: { page: page },
                success: function (data) {
                    var newData = $(data);
                    var newEventContainer = newData.find('#eventContainer').html();
                    var newPaginationContainer = newData.find('#paginationContainer').html();

                    $('#eventContainer').html(newEventContainer);
                    $('#paginationContainer').html(newPaginationContainer);

                    // Aktif sayfa bağlantısını belirleme
                    $('.pagination-list li').removeClass('active');
                    $('.pagination-list li').filter(function () {
                        return $(this).find('.page-link').text() === page;
                    }).addClass('active');

                    $('html, body').animate({
                        scrollTop: $('#events').offset().top
                    }, 500);
                },
                error: function () {
                    alert('Bir hata oluştu. Sayfa yeniden yükleniyor...');
                    window.location.reload();
                }
            });
        }

        // Sayfalar arasında geçiş yapma
        $(document).on('click', '.page-link', function (e) {
            e.preventDefault();
            var page = $(this).text();
            loadExpertise(page);

            // Tıklanan sayfa numarasını aktif yapma
            $('.pagination-list li').removeClass('active');
            $(this).closest('li').addClass('active');
        });

        $(document).on('click', '.prev-page', function (e) {
            e.preventDefault();
            var currentPage = parseInt($('.pagination-list .active .page-link').text());
            if (currentPage > 1) {
                var prevPage = currentPage - 1;
                loadExpertise(prevPage);
            }
        });

        $(document).on('click', '.next-page', function (e) {
            e.preventDefault();
            var currentPage = parseInt($('.pagination-list .active .page-link').text());
            var nextPage = currentPage + 1;
            loadExpertise(nextPage);
        });

        // İlk sayfa yüklenirken ilk sayfa numarasını aktif yapma
        $('.pagination-list li').eq(1).addClass('active');
    });

</script>