<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.RegisterPage"
             Title="RegisterPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Sign Up Now" FontSize="25" FontAttributes="Bold" TextColor="#081828" HorizontalOptions="Center" Margin="0, 40, 0, 10"/>
                <Entry Placeholder="Enter your Firstname" x:Name="FirstName" Margin="0, 10" />
                <Entry Placeholder="Enter your Lastname" x:Name="LastName" Margin="0, 10" />
                <Entry Placeholder="Enter your Email" x:Name="Email" Margin="0, 10" />
                <Entry Placeholder="Enter your Password" x:Name="Password" IsPassword="True" Margin="0, 10" />
                <Entry Placeholder="Confirm password" x:Name="ConfirmPassword" IsPassword="True" Margin="0, 10" />
                <Button Text="Sign Up" BackgroundColor="#7E57FF" TextColor="White"  Margin="0, 20, 0, 10"/>
                
               
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>