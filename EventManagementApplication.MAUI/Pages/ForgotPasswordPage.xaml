<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.ForgotPasswordPage"
             xmlns:vm="clr-namespace:EventManagementApplication.MAUI.ViewModels"
             x:DataType="vm:ForgotPasswordViewModel"
             Title="ForgotPasswordPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
                <Label Text="Forgot your password?" FontSize="25" FontAttributes="Bold" TextColor="#081828" HorizontalOptions="Center" Margin="0, 40, 0, 10"/>
                <Label Text="Enter your email, then we send you a reset password link" FontSize="22" FontAttributes="Bold" TextColor="#081828" HorizontalOptions="Center" Margin="0, 40, 0, 10"/>

                <Entry Placeholder="Email " Text= "{Binding email}" Margin="0, 10" />
                <Button Text="Reset Password" BackgroundColor="#7E57FF" TextColor="White"  Margin="0, 20, 0, 10"/>



            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>