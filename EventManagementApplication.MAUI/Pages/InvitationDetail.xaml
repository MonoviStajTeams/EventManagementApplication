<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.Pages.InvitationDetail"
             Title="InvitationDetail">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="{Binding Title}" FontAttributes="Bold" />


            <Label  Text="{Binding Description}" FontAttributes="Bold" />


            <Label Text="{Binding UserId}" FontAttributes="Bold" />
       

            <Label Text="Event" FontAttributes="Bold" />
            
            <Button Text="Accept" Command="{Binding AcceptInvitationCommand}"  BackgroundColor="{DynamicResource PrimaryColor}" TextColor="White" Margin="0, 20, 0, 10" />

            <Button Text="Cancel" Command="{Binding CancelInvitationCommand}" BackgroundColor="{DynamicResource PrimaryColor}" TextColor="White" Margin="0, 20, 0, 10" />

        </StackLayout>
    </ScrollView>
</ContentPage>