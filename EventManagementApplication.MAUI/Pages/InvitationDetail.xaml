<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.Pages.InvitationDetail"
             Title="InvitationDetail">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Title:" FontAttributes="Bold" />
            <Entry Text="{Binding Title}" />

            <Label Text="Description:" FontAttributes="Bold" />
            <Entry Text="{Binding Description}" />

            <Label Text="User ID:" FontAttributes="Bold" />
            <Entry Text="{Binding UserId}" Keyboard="Numeric" />

            <Label Text="Event ID:" FontAttributes="Bold" />
            <Entry Text="{Binding EventId}" Keyboard="Numeric" />
        </StackLayout>
    </ScrollView>
</ContentPage>