<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.Pages.MainPage"
             xmlns:vm="clr-namespace:EventManagementApplication.MAUI.Models.ViewModels"
             x:DataType="vm:LoginViewModel"
             Title="Login Page">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Sign In Now" FontSize="25" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0, 40, 0, 10"/>
               
                <Button Text="Sign Up Here" BackgroundColor="#7E57FF" TextColor="White" Clicked="SignUp_Clicked"  Margin="0, 0, 0, 20"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
