<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.UpdateInvitation"
             Title="UpdateInvitation">
    <Grid>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Update Invitation" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

                
                <Entry x:Name="invitationTitle" Placeholder="Title" Margin="0,0,0,10" />
                <Entry x:Name="invitationDescription" Placeholder="Description"  HeightRequest="100" Margin="0,0,0,10" />


                <Button Text="Update Invitation" Clicked="OnUpdateInvitationClicked" BackgroundColor="{DynamicResource PrimaryColor}" TextColor="White" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>