<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApplication.MAUI.AddInvitation"
             Title="AddInvitation">
    <Grid>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Add Invitation" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,20,20" />

                <Entry Placeholder="Başlık" x:Name="Title" Margin="0,0,20,20" />

                <Editor Placeholder="Açıklama" x:Name="Description" HeightRequest="100" />

                <Button Text="Add Invitation" Clicked="OnAddInvitationClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>